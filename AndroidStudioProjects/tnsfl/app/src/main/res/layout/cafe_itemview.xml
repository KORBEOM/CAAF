<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cafe_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="500dp"
        card_view:cardBackgroundColor="@color/baigee"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="100dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_round"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cafe_logo"
                android:layout_width="146dp"
                android:layout_height="136dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cafefirst"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.266" />

            <TextView
                android:id="@+id/cafe_phone"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical"
                android:text="041-1234-5678"
                android:textSize="18sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toEndOf="@+id/cafe_logo"
                card_view:layout_constraintTop_toBottomOf="@+id/cafe_title" />

            <TextView
                android:id="@+id/cafe_title"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="스타벅스 백석대점"
                android:textColor="@color/black"
                android:textSize="25sp"
                card_view:layout_constraintBottom_toTopOf="@+id/cafe_logo"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.27"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.578" />

            <TextView
                android:id="@+id/newaddress"
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="asdasdasd"
                android:textSize="13sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toEndOf="@+id/cafe_logo"
                card_view:layout_constraintTop_toBottomOf="@+id/oldaddress" />

            <TextView
                android:id="@+id/oldaddress"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:gravity="center_vertical"
                android:text="asdasd"
                android:textSize="13sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0"
                card_view:layout_constraintStart_toEndOf="@+id/cafe_logo"
                card_view:layout_constraintTop_toBottomOf="@+id/cafe_phone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>