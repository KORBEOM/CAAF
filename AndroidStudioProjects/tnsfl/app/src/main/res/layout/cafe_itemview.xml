<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/baigee"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="15dp"
        android:id="@+id/cafe_total">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cafe_logo"
                android:layout_width="140dp"
                android:layout_height="87dp"
                android:layout_margin="20dp"
                android:src="@drawable/catdog"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/cafe_comment"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cafe_title"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="카페이름"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="@+id/cafe_content"
                card_view:layout_constraintTop_toBottomOf="@+id/cafe_comment"
                card_view:layout_constraintVertical_bias="0.473" />

            <TextView
                android:id="@+id/cafe_comment"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="카페이름"
                android:textSize="25sp"
                card_view:layout_constraintBottom_toTopOf="@+id/cafe_title"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="@+id/cafe_content"
                card_view:layout_constraintTop_toBottomOf="@+id/cafe_content" />

            <TextView
                android:id="@+id/cafe_content"
                android:layout_width="270dp"
                android:layout_height="42dp"
                android:layout_marginStart="141dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="카페이름"
                android:textSize="25sp"
                card_view:layout_constraintBottom_toTopOf="@+id/cafe_comment"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>