<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="#FDE48F"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:text="Cafe in"
            android:fontFamily="@font/kokomi"
            android:textSize="30dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/put_text"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/kokomi"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:text="Copyright 2021. www.flaticon.com Co, Ltd. all rights reserved.
Copyright 2021. www.iconfinder Co, Ltd. all rights reserved.
Copyright 2021.  www.knps.or.kr Co(KKOMI) , Ltd. all rights reserved."
            android:layout_height="0dp"
            android:textSize="20dp"
            android:layout_weight="1.7"/>
        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="right">

            <Button
                android:id="@+id/btnCancle3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#F8AE4C"
                android:scaleType="center"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="10dp"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
